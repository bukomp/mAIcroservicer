{
  "name": "cli-app",
  "version": "1.0.0",
  "description": "A CLI app that receives commands and returns responses",
  "main": "dist/cli.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/**/*"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsc && pkg -t node18-linux dist/cli.js -o cli_app",
    "dev": "ts-node src/cli.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.6",
    "dotenv": "^16.3.1",
    "jest": "^29.6.4",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.9.5"
  },
  "bin": {
    "cli-app": "./dist/cli-app"
  }
}
